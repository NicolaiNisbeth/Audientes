<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#EC407A"
                android:startColor="#AB47BC"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorTransparentWhite" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#4A148C"
                android:startColor="#880E4F"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorTransparentWhite" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#7B1FA2"
                android:startColor="#C2185B"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorTransparentWhite" />
            <corners
                android:radius="100dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
