<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

        <item>
            <shape
                android:shape="oval">
                <gradient
                    android:startColor="@color/pink"
                    android:centerColor="@color/lightDarkPink"
                    android:endColor="@color/orange"
                    android:angle="45"
                    />
                <size
                    android:width="56dp"
                    android:height="56dp" />
            </shape>
        </item>
        <item
            android:left="20dp"
            android:right="20dp">
            <shape android:shape="line">
                <stroke
                    android:width="1.5dp"
                    android:color="#ffffff" />
            </shape>
        </item>
        <item
            android:left="20dp"
            android:right="20dp">
            <rotate
                android:fromDegrees="90">
                <shape android:shape="line">
                    <stroke
                        android:width="1.5dp"
                        android:color="#ffffff" />
                </shape>
            </rotate>
        </item>

</ripple>